<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EditDialogue">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header_theme"
        android:id="@+id/headerThemeText"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="visible"
        />


    <HorizontalScrollView
        android:id="@+id/headerColorBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerThemeText"
        android:foregroundGravity="center"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/blackColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/black"
                android:layout_margin="10dp"
                android:orientation="horizontal"/>
            <LinearLayout
                android:id="@+id/tealColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/teal"
                android:layout_margin="10dp"
                android:orientation="horizontal"/>
            <LinearLayout
                android:id="@+id/splashColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/splash"
                android:layout_margin="10dp"
                android:orientation="horizontal"/>
            <LinearLayout
                android:id="@+id/purpleColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/purple"

                android:layout_margin="10dp"

                android:orientation="horizontal"/>
        </LinearLayout>

    </HorizontalScrollView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/content_theme"
        android:id="@+id/contentThemeText"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="visible"
        android:layout_below="@id/headerColorBox"
        />


    <HorizontalScrollView
        android:id="@+id/ContentImageBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contentThemeText"
        android:foregroundGravity="center"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/bg1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg5"
                android:layout_margin="10dp"

                android:orientation="horizontal"/>
            <LinearLayout
                android:id="@+id/bg2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg3"
                android:layout_margin="10dp"
                android:orientation="horizontal"/>
            <LinearLayout
                android:id="@+id/bg3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg3"
                android:layout_margin="10dp"
                android:orientation="horizontal"/>
            <LinearLayout
                android:id="@+id/bg4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg4"

                android:layout_margin="10dp"

                android:orientation="horizontal"/>
            <LinearLayout
                android:id="@+id/bg5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg5"

                android:layout_margin="10dp"

                android:orientation="horizontal"/>
        </LinearLayout>

    </HorizontalScrollView>








</RelativeLayout>