<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_dialogue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EditDialogue">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header_theme"
        android:id="@+id/headerThemeText"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="visible"
        />


    <HorizontalScrollView
        android:id="@+id/headerColorBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerThemeText"
        android:foregroundGravity="center"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/blackColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/black"
                android:layout_margin="10dp"
                android:orientation="horizontal"/>
            <LinearLayout
                android:id="@+id/tealColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/teal"
                android:layout_margin="10dp"
                android:orientation="horizontal"/>
            <LinearLayout
                android:id="@+id/splashColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/splash"
                android:layout_margin="10dp"
                android:orientation="horizontal"/>
            <LinearLayout
                android:id="@+id/purpleColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/purple"

                android:layout_margin="10dp"

                android:orientation="horizontal"/>
        </LinearLayout>

    </HorizontalScrollView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/content_theme"
        android:id="@+id/contentThemeText"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="visible"
        android:layout_below="@id/headerColorBox"
        />


    <HorizontalScrollView
        android:id="@+id/ContentImageBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contentThemeText"
        android:foregroundGravity="center"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/bg1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg5"
                android:layout_margin="10dp"

                android:orientation="horizontal"/>
            <LinearLayout
                android:id="@+id/bg2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg3"
                android:layout_margin="10dp"
                android:orientation="horizontal"/>
            <LinearLayout
                android:id="@+id/bg3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg3"
                android:layout_margin="10dp"
                android:orientation="horizontal"/>
            <LinearLayout
                android:id="@+id/bg4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg4"

                android:layout_margin="10dp"

                android:orientation="horizontal"/>
            <LinearLayout
                android:id="@+id/bg5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg5"

                android:layout_margin="10dp"

                android:orientation="horizontal"/>
        </LinearLayout>

    </HorizontalScrollView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content Font Style"
        android:id="@+id/contentFontStyle"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="visible"
        android:layout_below="@id/ContentImageBox"
        />


    <HorizontalScrollView
        android:id="@+id/ContentFontStyleBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contentFontStyle"
        android:foregroundGravity="center"
        android:background="@color/white">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text1"
                android:layout_margin="10dp"
                android:fontFamily="@font/hindi"
                android:text="नमस्ते"
                android:textColor="@color/black"
                android:textSize="30sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text2"
                android:layout_margin="10dp"
                android:fontFamily="@font/play"
                android:text="Hello"
                android:textColor="@color/black"
                android:textSize="30sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text3"
                android:layout_margin="10dp"
                android:fontFamily="@font/playfair"
                android:text="Hello"
                android:textColor="@color/black"
                android:textSize="30sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text4"
                android:layout_margin="10dp"
                android:fontFamily="@font/playread"
                android:text="Hello"
                android:textColor="@color/black"
                android:textSize="30sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text5"
                android:layout_margin="10dp"
                android:fontFamily="@font/playwrite"
                android:text="Hello"
                android:textColor="@color/black"
                android:textSize="30sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text6"
                android:layout_margin="10dp"
                android:fontFamily="@font/siliguri"
                android:text="Hello"
                android:textColor="@color/black"
                android:textSize="30sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text7"
                android:layout_margin="10dp"
                android:fontFamily="@font/sofiasans"
                android:text="Hello"
                android:textColor="@color/black"
                android:textSize="30sp"/>
        </LinearLayout>
    </HorizontalScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/ContentFontStyleBox"
            android:orientation="horizontal">



            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:id="@+id/resetButton"
                />

        </LinearLayout>




</RelativeLayout>